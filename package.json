{
  "name": "boilerplatenext",
  "version": "1.0.0",
  "description": "APP Developed using React, Next, PWA, TypeScript, ESLint, Prettier, Jest, StoryBook, Styled-components and Git Hooks.",
  "private": true,
  "keywords": [
    "APP",
    "React",
    "Next",
    "PWA",
    "ESLint",
    "Prettier",
    "Jest",
    "StoryBook",
    "Styled-components",
    "Git Hooks",
    "Typescript"
  ],
  "author": "George Bezerra <george.contato@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test:watch": "yarn test --watch",
    "lint": "eslint src --max-warnings=0",
    "build-storybook": "build-storybook -s ./public ",
    "storybook": "start-storybook -s ./public -p 6006",
    "generate": "yarn plop --plopfile ./generators/plopfile.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "dependencies": {
    "next": "10.0.3",
    "next-pwa": "^5.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husk": "^0.5.3",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^10.5.3",
    "plop": "^2.7.4",
    "prettier": "2.2.1",
    "typescript": "^4.1.3"
  }
}
